<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_view_dms_category_form" model="ir.ui.view">
        <field name="name">dms_category.form</field>
        <field name="model">dms.category</field>
        <field name="inherit_id" ref="dms.view_dms_category_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page" position="before">
                <page string="Advanced options">
                    <group>
                        <field name="expiry_date"/>
                        <field name="expiry_self_check"/>
                        <field name="auto_send_email"/>
                        <field name="template_email_id"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
