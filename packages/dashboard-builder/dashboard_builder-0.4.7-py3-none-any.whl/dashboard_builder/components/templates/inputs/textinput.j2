<div class="overflow-hidden mb-4">
    <label for="{{ name }}" class="text-xs sm:text-sm md:text-base font-medium text-gray-700 mb-2 leading-tight">
        {{ label }}
    </label>
    <input 
        type="text" 
        id="{{ name }}" 
        name="{{ name }}" 
        value="{{ default_value }}" 
        class="{{ theme_colors['text'] }} w-full border border-gray-300 p-2 rounded-md focus:outline-none focus:ring focus:ring-opacity-50 focus:ring-blue-500"
    >
</div>
