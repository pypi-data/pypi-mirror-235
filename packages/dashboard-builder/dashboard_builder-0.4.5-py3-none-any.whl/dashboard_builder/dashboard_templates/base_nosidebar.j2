<!-- templates/base_withoutsidebar.j2 -->

<!DOCTYPE html>
<html>
<head>
    <title>{{ defaults.page_title }}</title>
    <!-- Include Tailwind CSS via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <!-- Include Markdown styling via CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/github-markdown-css/4.0.0/github-markdown.min.css" rel="stylesheet">
    <!-- Load in Vega, Vega-Lite, and Vega-Embeded modules (required for Altair) -->
    <script src="https://cdn.jsdelivr.net/npm/vega@5"></script>
    <script src="https://cdn.jsdelivr.net/npm/vega-lite@5"></script>
    <script src="https://cdn.jsdelivr.net/npm/vega-embed@6"></script>
</head>
<body class="{{ theme_colors['background_light'] }} h-screen font-sans">
    <div class="mx-auto p-4">

        <!-- Outputs Container -->
        <div class="ml-6">
            {% for output_component in output_components %}
                <div class="mb-4">{{ output_component|safe }}</div>
            {% endfor %}
        </div>
    </div>

    <footer class="{{ theme_colors['background_footer'] }} rounded-lg shadow dark:bg-gray-800">
        <div class="w-full mx-auto max-w-screen-xl p-4 md:flex md:items-center md:justify-between">
            <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400">
                {{ defaults.footer_text }}
            </span>
        </div>
    </footer>

</body>
</html>
